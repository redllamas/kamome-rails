= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    %br/
    = f.text_field :title, :size => "60%"
  .field
    = f.label :content
    %br/
    = f.text_area :content, :size => "60%x20%"
  .field
    = f.text_field :tag_list, :size => "60%"
  .actions
    = f.submit 'Save'
